#!/bin/sh

set -e

if [ "$SNAP_ARCH" = "armhf" ]; then
    if [ ! -L $SNAP_USER_COMMON/libffi.so.5 ]; then
        ln -s /usr/lib/arm-linux-gnueabihf/libffi.so $SNAP_USER_COMMON/libffi.so.5
    fi
    LD_LIBRARY_PATH=$SNAP_USER_COMMON pypy3 $SNAP/bin/crossbar "$@"
else
    pypy3 $SNAP/bin/crossbar "$@"
fi
